<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="960.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Client.AccountsController">
   <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Accounts" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0" />
   <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="50.0">
      <VBox spacing="15.0" style="-fx-padding: 10;">
         <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="My Accounts:" />
         <Label style="-fx-font-size: 10; -fx-text-fill: #666;" text="Scroll to view all accounts. Click to select." wrapText="true" />
         <ListView fx:id="accounts_list" prefHeight="200.0" prefWidth="780.0" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
         <VBox spacing="10.0">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold;" text="Details:" />
            <VBox spacing="6.0">
               <VBox spacing="4.0">
                  <Label style="-fx-font-size: 11;" text="Acc #:" />
                  <Label fx:id="account_num_lbl" text="-" style="-fx-font-size: 11;" />
               </VBox>
               <VBox spacing="4.0">
                  <Label style="-fx-font-size: 11;" text="Bank:" />
                  <Label fx:id="bank_name_lbl" text="-" style="-fx-font-size: 11;" />
               </VBox>
               <VBox spacing="4.0">
                  <Label style="-fx-font-size: 11;" text="Type:" />
                  <Label fx:id="account_type_lbl" text="-" style="-fx-font-size: 11;" />
               </VBox>
               <VBox spacing="4.0">
                  <Label style="-fx-font-size: 11;" text="Balance:" />
                  <Label fx:id="balance_lbl" text="0.00" style="-fx-font-size: 11; -fx-font-weight: bold;" />
               </VBox>
            </VBox>
            <Label style="-fx-font-size: 13; -fx-font-weight: bold;" text="Update:" />
            <VBox spacing="6.0">
               <Label style="-fx-font-size: 11;" text="Bank Name:" />
               <TextField fx:id="update_bank_name_fld" prefHeight="32.0" prefWidth="780.0" />
               <Label style="-fx-font-size: 11;" text="Type:" />
               <ComboBox fx:id="update_account_type_combo" prefHeight="32.0" prefWidth="780.0" />
            </VBox>
            <Button fx:id="update_account_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="780.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;" text="Update" />
            <Button fx:id="remove_account_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="780.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;" text="Remove" />
            <Label fx:id="update_account_error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
            <Label fx:id="remove_account_error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
         </VBox>
         <VBox spacing="10.0" style="-fx-padding: 12; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Add Account:" />
            <VBox spacing="6.0">
               <Label style="-fx-font-size: 11;" text="Acc # *" />
               <TextField fx:id="new_account_num_fld" prefHeight="32.0" prefWidth="780.0" />
               <Label style="-fx-font-size: 11;" text="Bank *" />
               <TextField fx:id="new_bank_name_fld" prefHeight="32.0" prefWidth="780.0" />
               <Label style="-fx-font-size: 11;" text="Type *" />
               <ComboBox fx:id="account_type_combo" prefHeight="32.0" prefWidth="780.0" />
               <Label style="-fx-font-size: 11;" text="Balance *" />
               <TextField fx:id="new_balance_fld" prefHeight="32.0" prefWidth="780.0" />
               <Label fx:id="add_account_error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
               <Button fx:id="add_account_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="780.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;" text="Add" />
            </VBox>
         </VBox>
      </VBox>
   </ScrollPane>
</AnchorPane>
