<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="960.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Client.ProfileController">
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <VBox spacing="15.0" style="-fx-padding: 15;">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Profile" />
        <Label style="-fx-font-size: 11;" text="First Name *" />
        <TextField fx:id="firstName_fld" prefHeight="32.0" prefWidth="780.0" />
        <Label style="-fx-font-size: 11;" text="Last Name *" />
        <TextField fx:id="lastName_fld" prefHeight="32.0" prefWidth="780.0" />
        <Label style="-fx-font-size: 11;" text="Email *" />
        <TextField fx:id="email_fld" prefHeight="32.0" prefWidth="780.0" />
        <Label style="-fx-font-size: 11;" text="Phone *" />
        <TextField fx:id="phoneNumber_fld" prefHeight="32.0" prefWidth="780.0" />
        <Label style="-fx-font-size: 11;" text="Address" />
        <TextField fx:id="address_fld" prefHeight="32.0" prefWidth="780.0" />
        <Button fx:id="update_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="780.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;" text="Update Profile" />
        <Label fx:id="error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text="Security Settings" />
        <VBox spacing="6.0" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold;" text="Two-Factor Authentication (2FA)" />
            <Label style="-fx-font-size: 11; -fx-text-fill: #666;" text="Enable 2FA to add an extra layer of security to your account. You'll need to enter an OTP code when logging in." wrapText="true" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <CheckBox fx:id="twoFactor_checkbox" text="Enable Two-Factor Authentication" />
                <Label fx:id="twoFactor_status_lbl" style="-fx-font-size: 11; -fx-text-fill: #666;" text="" />
            </HBox>
            <Button fx:id="update2FA_btn" mnemonicParsing="false" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" text="Update 2FA Setting" />
            <Label fx:id="twoFactor_error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
        </VBox>
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 15 0 0 0;" text="Transaction Limits" />
        <Label style="-fx-font-size: 11; -fx-text-fill: #666;" text="Set your daily and weekly transaction limits" wrapText="true" />
        <Label style="-fx-font-size: 11;" text="Daily Limit ($) *" />
        <TextField fx:id="dailyLimit_fld" prefHeight="32.0" prefWidth="780.0" />
        <Label style="-fx-font-size: 11;" text="Weekly Limit ($) *" />
        <TextField fx:id="weeklyLimit_fld" prefHeight="32.0" prefWidth="780.0" />
        <VBox spacing="6.0" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 12; -fx-font-weight: bold;" text="Current Usage:" />
            <Label fx:id="dailyUsed_lbl" style="-fx-font-size: 11;" text="Daily: $0.00 / $0.00" />
            <Label fx:id="weeklyUsed_lbl" style="-fx-font-size: 11;" text="Weekly: $0.00 / $0.00" />
        </VBox>
            <Button fx:id="updateLimits_btn" mnemonicParsing="false" prefHeight="38.0" prefWidth="780.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold;" text="Update Limits" />
            <Label fx:id="limits_error_lbl" style="-fx-text-fill: red; -fx-font-size: 10;" text="" wrapText="true" />
        </VBox>
    </ScrollPane>
</AnchorPane>

