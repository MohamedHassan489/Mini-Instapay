<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="960.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Client.SendMoneyController">
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <VBox spacing="15.0" style="-fx-padding: 15;">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Send Money" />
        <Label style="-fx-font-size: 12; -fx-text-fill: #666;" text="Transfer money to another user" wrapText="true" />
        
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-padding: 8 0 0 0;" text="Recipient" />
        <Label style="-fx-font-size: 11; -fx-text-fill: #666;" text="Enter phone number, account number, username, or email" wrapText="true" />
        <TextField fx:id="receiver_fld" prefHeight="35.0" prefWidth="780.0" promptText="e.g., 1234567890, ACC001, username, or user@email.com" />
        
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-padding: 8 0 0 0;" text="From Account" />
        <ComboBox fx:id="sourceAccount_combo" prefHeight="35.0" prefWidth="780.0" promptText="Select account" />
        
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-padding: 8 0 0 0;" text="Amount" />
        <TextField fx:id="amount_fld" prefHeight="35.0" prefWidth="780.0" promptText="0.00" />
        
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-padding: 8 0 0 0;" text="Transaction Type" />
        <ComboBox fx:id="transactionType_combo" prefHeight="35.0" prefWidth="780.0" />
        
        <VBox fx:id="scheduledDate_container" spacing="6.0" visible="false">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold;" text="Scheduled Date" />
            <Label style="-fx-font-size: 11; -fx-text-fill: #666;" text="Select a future date for scheduled transfer" wrapText="true" />
            <DatePicker fx:id="scheduledDate_picker" prefHeight="35.0" prefWidth="780.0" />
        </VBox>
        
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-padding: 8 0 0 0;" text="Message (Optional)" />
        <TextArea fx:id="message_fld" prefHeight="100.0" prefWidth="780.0" promptText="Add a note or message for this transaction" wrapText="true" />
        
            <Button fx:id="send_btn" mnemonicParsing="false" prefHeight="42.0" prefWidth="780.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 5;" text="Send Money" />
            <Label fx:id="error_lbl" style="-fx-text-fill: red; -fx-font-size: 11;" text="" wrapText="true" minHeight="50.0" prefHeight="50.0" />
        </VBox>
    </ScrollPane>
</AnchorPane>

