<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Client.SendMoneyController">
    <VBox layoutX="50.0" layoutY="30.0" prefHeight="550.0" prefWidth="700.0" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Send Money" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Receiver (Phone Number or Account Number or Username)" />
        <TextField fx:id="receiver_fld" prefHeight="30.0" prefWidth="700.0" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select Source Account" />
        <ComboBox fx:id="sourceAccount_combo" prefHeight="30.0" prefWidth="700.0" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Amount" />
        <TextField fx:id="amount_fld" prefHeight="30.0" prefWidth="700.0" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Transaction Type" />
        <ComboBox fx:id="transactionType_combo" prefHeight="30.0" prefWidth="700.0" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Message (Optional)" />
        <TextArea fx:id="message_fld" prefHeight="100.0" prefWidth="700.0" />
        <Button fx:id="send_btn" mnemonicParsing="false" prefHeight="35.0" prefWidth="700.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Send Money" />
        <Label fx:id="error_lbl" style="-fx-text-fill: red;" text="" />
    </VBox>
</AnchorPane>

