<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Admin.ReportsController">
    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Reports &amp; Analytics" />
            <Label style="-fx-font-size: 14; -fx-text-fill: #666;" text="Generate comprehensive reports on transactions and user activity" />
            
            <Separator />
            
            <VBox spacing="15.0">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Select Report Type" />
                <ComboBox fx:id="reportType_combo" prefHeight="40.0" prefWidth="1140.0" />
            </VBox>
            
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <Label fx:id="monthLabel" text="Select Month:" style="-fx-font-size: 14;" />
                <DatePicker fx:id="monthDatePicker" prefHeight="35.0" prefWidth="250.0" />
            </HBox>
            
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <Label fx:id="yearLabel" text="Select Year:" style="-fx-font-size: 14;" />
                <DatePicker fx:id="yearDatePicker" prefHeight="35.0" prefWidth="250.0" />
            </HBox>
            
            <HBox spacing="15.0">
                <Button fx:id="generateReport_btn" mnemonicParsing="false" prefHeight="45.0" prefWidth="200.0" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" 
                        text="Generate Report" />
                <Button fx:id="detailedReport_btn" mnemonicParsing="false" prefHeight="45.0" prefWidth="200.0" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" 
                        text="Generate Detailed Report" />
            </HBox>
            
            <Separator />
            
            <VBox spacing="10.0">
                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Report Output" />
                <TextArea fx:id="reportContent_area" prefHeight="500.0" prefWidth="1140.0" 
                         editable="false" wrapText="true" 
                         style="-fx-font-family: 'Courier New', monospace; -fx-font-size: 12;" />
            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>

