<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="content_area" stylesheets="@../../Styles/Admin.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.national_bank_of_egypt.Controllers.Admin.AdminTransactionsController">
    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="section_title" text="All Transactions" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="flagSuspicious_btn" mnemonicParsing="false" styleClass="danger_btn" text="ðŸš© Flag Suspicious" />
        </HBox>

        <!-- Filters & Search -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="search_container">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Filter:" style="-fx-fill: #666;" />
            <ComboBox fx:id="filter_combo" styleClass="filter_combo" prefWidth="150.0" />
            <Region HBox.hgrow="ALWAYS" />
            <Text text="ðŸ”" style="-fx-fill: #999;" />
            <TextField fx:id="search_fld" promptText="Search ID, Amount, User..." styleClass="search_field" prefWidth="250.0" />
        </HBox>

        <!-- Transaction List -->
        <VBox styleClass="card" VBox.vgrow="ALWAYS">
            <HBox style="-fx-padding: 0 0 10 0; -fx-border-color: transparent transparent #eee transparent;">
                <Label text="Transaction History" styleClass="table_header" />
            </HBox>
            <ListView fx:id="transactions_list" styleClass="modern_list_view" VBox.vgrow="ALWAYS" />
        </VBox>
        
        <Label fx:id="status_lbl" styleClass="status_badge" visible="false" managed="false" />
    </VBox>
</AnchorPane>

